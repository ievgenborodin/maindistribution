<style>
.main{}
.main .intro .min_width{
    position: relative;
    z-index: 1;
    height: 781px;
}
.main .intro{
    height: 830px;
    padding: 150px 0 0;
    margin: -150px 0 0;
    border-bottom: 1px solid white;
    font-size: 15px;
    line-height: 18px;
    position:relative;
    overflow:hidden;
    background-color: #fff;
}
.intro .join_us{
    position: absolute;
    right: 63px;
    bottom: 92px;
    z-index: 3;
    width: 250px;
}
.intro .hr{background: #cac8b9;margin: 22px 22px 22px 0}

.intro .bottle_img{
    text-align: center;
    position: absolute;
    left: 0;
    top: 107px;
    width: 100%;
    z-index: 2;
}
.intro .bottle_text{
    text-align: center;
    position: absolute;
    left: 0;
    top: 20px;
    width: 100%;
    z-index: 1;
}
.intro .bottle_info{
    position: absolute;
    left: 60%;
    bottom: 0;
    z-index: 3;
    width: 296px;
    font-size: 15px;
    line-height: 18px;
    /*min-height: 253px;*/

}
.intro .bottle_info .title{
    font-size: 26px;
    line-height: 30px;
    font-weight: bold;
    text-transform: uppercase;
}
.intro .bottle_info .sub_title{
    font-size: 20px;
    line-height: 24px;
    font-style: italic;
    font-family: Georgia,"Times New Roman", serif;
    margin: 0 0 11px;
}
.intro .bottle_info .text{
    margin: 0 0 27px;
}
.intro .bottle_info .btn{
    padding-left: 10px;
    padding-right: 10px;
}
.img-absolute { position:absolute; top:0; height: 750px; margin:auto; left:-999px; right: -999px; }
</style>
<div class="main">
<div class="intro">
  <img class="img-absolute" src="{{ 'intro.jpg' | asset_url }}">
        <div class="min_width">
            <div class="bottle_img"><img src="{{ 'text_bottle.png' | asset_url }}" alt=""></div>
            <div class="bottle_info">
                <a class="title" href="/collections/all/cidre-royal" title="Cidre royal">Cidre royal</a>
                <div class="sub_title">Medium-sweet</div>
                <div class="text">Classic cider made of fermented juice only with the use of moderately sweet varieties of apples.</div>
                <a class="action_button" href="/products/apple-cidre-royal" title="">Buy now</a>
            </div>
        </div>
    </div>
</div>
