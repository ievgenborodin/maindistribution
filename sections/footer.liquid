<div class="footer">
  <div class="container">
    <div class="seven columns">
      {% if section.settings.footer_newsletter %}
        <h6>{{ 'general.newsletter_form.title' | t }}</h6>
        {% include 'newsletter' %}
        
      {% endif %}
    </div>

    <div class="two columns">
      <h6>{{ linklists[section.settings.footer_linklist_1].title }}</h6>
      <ul class="footer_menu">
        {% for link in linklists[section.settings.footer_linklist_1].links %}
          <li><a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <div class="two columns">
      {% if section.settings.footer_social_icons %}
        <h6 class="social">{{ 'layout.general.social' | t }}</h6>
        {% include 'social-icons' %}
      {% endif %}
    </div>
    
    <div class="five columns">
      <h6>Customer Service</h6>
      <h2 class="contact-phone-number">{{ section.settings.contact_phone }}</h2>
    </div>

    <div class="sixteen columns">
      {% if section.settings.footer_content_page != blank %}
        <hr />      
        <div class="footer_content_page">
          {{ pages[section.settings.footer_content_page].content }}
        </div>
      {% endif %}

      <hr />
    </div>

    <div class="six columns">
      <p class="credits">
        &copy; {{ "now" | date: "%Y" }} 
        {{ section.settings.copyright_text }}
      </p>
    </div>

    <div class="ten columns credits_right">
      

      {% if section.settings.display_payment_methods %}
        <div class="payment_methods">
          {% for type in shop.enabled_payment_types %}
            <img src="{{ type | payment_type_img_url }}" alt="{{ type | replace: "_", " " | capitalize }}" />
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>

</div> <!-- end footer -->

{% schema %}
{
  "name": "Footer",
  "class": "footer-section",
  "settings": [
    {
      "type": "link_list",
      "id": "footer_linklist_1",
      "label": "Menu 1",
      "default": "footer"
    },
    {
      "type": "link_list",
      "id": "footer_linklist_2",
      "label": "Menu 2"
    },
    {
      "type": "page",
      "id": "footer_content_page",
      "label": "Footer content page"
    },
    {
      "type": "checkbox",
      "id": "footer_social_icons",
      "label": "Show social media icons",
      "default": true
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text"
    },
    {
      "type": "checkbox",
      "id": "footer_newsletter",
      "label": "Show footer newsletter form",
      "default": true
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Customer service phone number"
    },
    {
      "type": "checkbox",
      "id": "display_designed_by",
      "label": "Show theme designer credits",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "display_payment_methods",
      "label": "Show payment method icons",
      "default": true
    }
  ]
}
{% endschema %}


